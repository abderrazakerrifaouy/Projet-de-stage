<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Barbershop Image -->
        <ImageView
            android:id="@+id/ivBarbershop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/app_name"/>

        <!-- Barbershop Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBarbershopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="صالون الرجال الفاخر"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textDirection="rtl"/>



            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="الرياض، حي الملك فهد"
                android:textColor="@color/surface_dark"
                android:textDirection="rtl"/>

            <TextView
                android:id="@+id/tvBarbersCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5 حلاقين متاحين"
                android:textColor="@color/colorPrimary"
                android:textDirection="rtl"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>